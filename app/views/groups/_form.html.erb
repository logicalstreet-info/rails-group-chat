<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <%= form_for @group do |form| %>
            <div class="row">
              <div class="col-9">
                <%= form.text_field :name, class: 'form-control',placeholder: 'Enter Name' %>
              </div>
              <div class="col-3">
                <div class="col dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    select
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <%= form.collection_check_boxes(:user_ids, User.all, :id, :email) do |b| %>
                    <%= b.label { b.check_box + " " + b.text  } %></br>
                  <% end %>
                  </ul>
                </div>
              </div>
            </div><br/>
            <div class="row">
              <div class="col-2">
                <%= form.submit "Save", class: 'btn btn-success' %>
              </div>
              <div class="col-2">
                <%= link_to "Back", groups_path , class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
</div>