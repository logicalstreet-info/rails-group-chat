<div class="form-group msg-form">
  <%= form_with(model: [@single_group, @message], remote: true, class: "d-flex",
  data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |form| %>
    <%= form.text_field :body, id: 'chat-text', autocomplete: 'off' %>
    <%= form.submit "send", data: {disable_with: false}, class: 'btn btn-primary' %>
  <% end %>
</div>